{
    "env": {
        "es2021": true,
        "node": true,
        "shelljs": true
    },
    "extends": [
        "standard",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": ["error", "double", { "avoidEscape": true }]
    }
}
